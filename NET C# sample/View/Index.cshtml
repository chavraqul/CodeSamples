@model IEnumerable<ReleaseMgmtWeb.Models.Application>

@{
    ViewBag.Title = "Applications";
}

<h2 class="mid-title1 mid-center">Applications</h2>

<p>
    @Html.ActionLink("Create New", "Create") |
    @Html.ActionLink("Go Home", "Index", "Home")
</p>

<div class="input-group">
    <span class="input-group-addon">Filter</span>
    <input id="filter" type="text" class="form-control" placeholder="Type here...">
</div>
<div class="table-responsive">
    <table class="table table-hover">
        <thead class="thead-style">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.EPRId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ApplicationName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ApplicationAlias)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UpdatedBy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UpdatedDate)
                </th>
                <th></th>
            </tr>
       </thead>
       <tbody class="searchable">
            @foreach (var item in Model)
            {
                <tr>
                    <td class="filterByID">
                        @Html.ActionLink(item.EPRId, "Index", "ApplicationRelease")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ApplicationName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ApplicationAlias)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Users1.UserFullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UpdatedDate)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                        <a href= "https://apate.corp.hp.com/AppInst.aspx?PORTFOLIOID=@item.EPRId" target="_blank">Apate</a>
                    </td>
                </tr>
            }
     </tbody>
   </table>
</div>

